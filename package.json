{
  "name": "wpglobus",
  "version": "2.2.8",
  "title": "WPGlobus",
  "description": "WPGlobus is a plugin for making bilingual / multilingual WordPress blogs and sites.",
  "private": true,
  "homepage": "https://wpglobus.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/WPGlobus/wpglobus.git"
  },
  "bugs": {
    "url": "https://github.com/WPGlobus/wpglobus/issues"
  },
  "author": "The WPGlobus Team <support@wpglobus.com>",
  "license": "GPL-3.0",
  "jshintConfig": {
    "node": true
  },
  "main": "Gulpfile.js",
  "devDependencies": {
    "fancy-log": "1.3.3",
    "gulp": "3.9.1",
    "gulp-append-prepend": "1.0.8",
    "gulp-autoprefixer": "6.1.0",
    "gulp-downloader": "1.0.4",
    "gulp-print": "5.0.2",
    "gulp-rename": "1.4.0",
    "gulp-replace": "1.0.0",
    "gulp-sass": "4.0.2",
    "gulp-sourcemaps": "2.6.5",
    "gulp-uglify": "3.0.2",
    "gulp-vinyl-zip": "2.1.2",
    "gulp-wp-pot": "2.3.5",
    "plugin-error": "1.0.1",
    "through2": "3.0.1"
  },
  "dependencies": {},
  "scripts": {
    "list": "npm list --dept=0 && npm outdated",
    "audit": "npm audit",
    "upup": "del package-lock.json && del /s /q node_modules && npm install && npm run list",
    "changes": "git log --oneline develop --not master",
    "// 1. Get updates": "",
    "git:fetch:all": "git fetch --all",
    "git:pull:dev": "git checkout develop && git pull",
    "// 2. UPDATE VERSION IN THIS FILE!": "",
    "// 3. Build": "",
    "build": "php /tools/composer.phar update && gulp dist",
    "// 3.1 If translations changed": "",
    "tx:push:pot": "tx push -s",
    "tx:push:ru": "tx push -t -f -l ru_RU",
    "tx:pull:all": "tx pull -a -f --mode=translator",
    "pomo": "gulp pomo",
    "// 3.2 If translations changed - BUILD AGAIN!": "",
    "build:again": "gulp dist",
    "// 4. Commit and tag AND PUSH TO develop!": "",
    "git:commit": "git add . && git commit -m \"%npm_package_version%\"",
    "git:tag": "git tag %npm_package_version%",
    "// 4.1 PUSH TO develop!": "",
    "git:push:develop": "git push",
    "// 5. To master": "",
    "git:merge": "git checkout master && git merge develop",
    "git:push:master": "git push",
    "// 6. To WordPress": "",
    "svn:up": "cd wpsvn\\wpglobus && svn up",
    "svn:sync": "svn_sync.cmd",
    "svn:add": "cd wpsvn\\wpglobus && svn add --force trunk && svn status",
    "// 6.1 IF DELETED FILES, svn delete THEM MANUALLY!": "",
    "svn:commit": "cd wpsvn\\wpglobus && svn ci -m \"%npm_package_title% %npm_package_version%\" --username tivnet",
    "svn:tag": "cd wpsvn\\wpglobus && svn cp trunk tags/%npm_package_version% && svn stat",
    "svn:tag:commit": "cd wpsvn\\wpglobus && svn ci -m \"%npm_package_title% tag %npm_package_version%\" --username tivnet",
    "// 7. Back to develop branch": "",
    "git:checkout:dev": "git checkout develop"
  }
}
